  default-language: GHC2021
  type: exitcode-stdio-1.0
  ghc-options: -Wall -Wextra
  hs-source-dirs: tests
  main-is: Driver.hs
  build-depends:
    , base
    , containers
    , hedgehog
    , hspec
    , logict
    , primitive
    , puzzled
    , tasty
    , tasty-hedgehog
    , tasty-hspec
  build-tool-depends:
    tasty-discover:tasty-discover
  other-modules:
    Data.Monoid.JoinSemilatticeTest
    Propagator.ExecuteTest
