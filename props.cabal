cabal-version: 3.0
name: puzzled
version: 0.1.0.0
license: MIT

library
  exposed-modules:
    Control.Category.Eq
    Control.Category.Hierarchy
    Control.Category.Product
    Control.Category.Propagate
    Control.Category.Reify
    Control.Monad.Branch
    Data.Constraint.List
    Data.Monoid.JoinSemilattice
    Data.Primitive.MutVar.Rollback
